<link rel="stylesheet" href="/style.css">
<%layout('template.ejs')-%>
    <h1 class="text-info">Edit Spot Details</h1>
    <div class="w-50 ms-2 m-lg-auto text-lg-center">
    <form enctype="multipart/form-data" method="POST" action="/yelpies/<%=id%>?_method=PATCH" accept-charset="utf-8" class="needs-validation" novalidate>
        <label for="title" class="form-label">Spot title</label>
        <input class="form-control" type="text" name="camp[title]" id="title" value="<%=camp.title%>"  placeholder="spot name" required >
         <div class="valid-feedback">
      Looks good!
      </div>


      <label for="price" class="form-label">Spot price</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input class="form-control" type="number" name="camp[price]" id="price" value="<%=camp.price%>" placeholder="price" required > 
        <div class="valid-feedback">
       Looks good!
       </div>
      </div>    
      
      <label for="location" class="form-label">Spot location</label>
        <input class="form-control"type="text" name="camp[location]" id="location" value="<%=camp.location%>" placeholder="location" required>
      <div class="valid-feedback">
      Looks good!
    </div>
       <label for="description" class="form-label">Description</label>
        <textarea class="form-control" name="camp[description]" id="description" rows="8" cols="40"placeholder="spot description" required><%=camp.description%></textarea>
       <div class="valid-feedback">
      Looks good!
      </div>
      <div class="my-2"><input type="file" name="image" id="image" multiple>
      </div>
      <div>
      <% camp.image.forEach((pic,i)=>{ %>
      <div class="w-25 h-25 d-inline">   
        <img id="<%-camp.image[i].filename%>" data-path="<%-camp._id%>" class="delete img-fluid d-inline w-25 h-25" src="<%=pic.url%>" alt="cloud">
      </div>
      <%  })%>
      </div>
     <p class="text-muted my-1"> Double click to delete</p>
      <div>
        <button class="my-2 btn btn-info">Edit</button>
      </div>
    </form>
    </div>
    
 <script src="/script.js"></script>